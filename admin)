        <script>
            function showForm(formId) {
                // Hide all forms
                document.querySelectorAll('.card-body form').forEach(form => {
                    form.style.display = 'none';
                });

                // Show the selected form
                document.getElementById(formId).style.display = 'block';
            }
            
        </script>

        <script>
          $(document).ready(function () {
            $('#createUserButton').click(function (event) {
                // Prevent default form submission
                event.preventDefault();
                // Submit user form data asynchronously 
                alert("This is an alert box!");

                createUser('userForm');
            });

            // Add similar click event handlers for other forms if needed
        });

        function createUser(formId) {
            $.ajax({
                type: 'POST',
                url: 'admin_create.php', // Replace 'your_php_file.php' with the actual PHP file handling form submission
                data: $('#' + formId).serialize(), // Serialize form data
                success: function (response) {
                    // Show success message if entity is created successfully
                    $('#' + formId).find('.alert').removeClass('alert-danger').addClass('alert-success').html(response).show();
                },
                error: function (xhr, status, error) {
                    // Show error message if there's an error
                    $('#' + formId).find('.alert').removeClass('alert-success').addClass('alert-danger').html(error).show();
                }
            });
        }
         </script>
